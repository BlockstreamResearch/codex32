     % Draw white interior circle
     newpath
     outlineBottomDisc
     verythin line resetstroke
     newpath 0 0 innerRadius 0 360 arc thick line resetstroke
     % Draw letters
     gsave
       /Helvetica findfont outerTitleSz scalefont setfont
       360 64 div 360 8 div 360 {title outerTitleSz 3 -1 roll radius outerTitleSz sub outsidecircletext} for
     grestore
     outerglyphs {
       0 radius outerTitleSz outerglyphSz 0.8 mul add sub moveto outerglyphSz centrecodexshow
       % Draw indicator pointer
       0 innerRadius moveto outerPointerSz drawPointer
       angle neg rotate
     } forall
     0 1 31 { 
       gsave
       0 1 15 {
         spiral rotate
         dup ring /r exch def
         0 r innerglyphSz 0.25 mul sub moveto
         ordering 2 index get exch ordering exch get gf32add coding exch get % get glyph
         innerglyphSz centrecodexshow % ...and draw it
       } for
       grestore
       angle neg rotate
       pop
     } for
  } bind def

